{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "APP_VERSION": false,
    "GIT_COMMIT_HASH": false,
    "OAUTH_HOST": false,
    "OAUTH_CLIENT_ID": false,
    "OAUTH_CLIENT_SECRET": false,
    "GRPC_API": false,
    "GRAPHQL_API": false,
    "API_KEYWORDS": false,
    "jest/globals": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks",
    "jsx-a11y",
    "jest"
  ],
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "none",
        "varsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "import/no-webpack-loader-syntax": "off",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "semi": [
      2,
      "always"
    ],
    "space-before-function-paren": "error"
  },
  "settings": {
    "react": {
      "version": "16.5"
    }
  }
}